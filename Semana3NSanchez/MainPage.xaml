<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana3NSanchez.MainPage">

    <StackLayout>
        <Frame BackgroundColor="LightPink" Padding="24" CornerRadius="0">
            <Label Text="Semana 3!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        
        <Entry x:Name="txtUser" Placeholder="Ingrese el Usuario"/>
        <Entry x:Name="txtPass" Placeholder="Ingrese la contraseña" IsPassword="True"/>
        
        <Button Text="Ir a la Vista 2" x:Name="btnAbrir" Clicked="btnAbrir_Clicked"/>
    </StackLayout>

</ContentPage>
